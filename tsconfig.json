{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "types/*.d.ts"],
    "paths": {
      "*": ["node_modules/*"],
      "@workers/*": ["src/workers/*"],
      "@utils/*": ["src/utils/*"],
      "@windows/*": ["src/windows/*"]
    }
  },
  "include": ["src/**/*"]
}
